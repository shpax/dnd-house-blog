<div
  class="site-cover site-cover-sm same-height overlay single-page bg-bottom"
  style="background-image: url('<%= page.feature_image %>');"
>
  <div class="container">
    <div class="row same-height justify-content-center">
      <div class="col-md-12 col-lg-10">
        <div class="post-entry text-center">
          <h1 class=""><%= page.title %></h1>
          <% if (page.custom_excerpt) { %>

          <p class="lead mb-4 text-white"><%= page.custom_excerpt %></p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="site-section bg-light">
  <div class="container" id="<%= slug %>-container"></div>
</div>
