<div class="container mt-4">
  <div class="row">
    <% posts.forEach(post => { %>
    <div class="col-lg-4 mb-4">
      <div class="entry2">
        <a href="<%= post.url %>"
          ><img src="<%= post.feature_image %>" class="img-hopemage-post"
        /></a>
        <div class="excerpt">
          <h2>
            <a href="<%= post.url %>"><%= post.title %></a>
          </h2>

          <p>
            <%= post.excerpt %>
          </p>
          <p><a href="<%= post.url %>">Читать полностью</a></p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
