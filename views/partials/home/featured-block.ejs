<div class="site-section bg-light">
  <div class="container">
    <div class="row align-items-stretch retro-layout-2">
      <div class="col-md-4">
        <a
          href="<%= posts[0].url %>"
          class="h-entry mb-30 v-height gradient"
          style="background-image: url('<%= posts[0].feature_image %>');"
        >
          <div class="text">
            <h2><%= posts[0].title %></h2>
            <span class="date"><%= posts[0].reading_time %></span>
          </div>
        </a>
